<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.school.master.upload.dao.AdminImageDao">

    <resultMap type="com.school.master.upload.dto.AdminImage" id="AdminImageMap">
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="imageUrl" column="image_url" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AdminImageMap">
        select
          name, image_url
        from school_master.admin_image
        where name = #{name}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AdminImageMap">
        select
          name, image_url
        from school_master.admin_image
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="AdminImageMap">
        select
        name, image_url
        from school_master.admin_image
        <where>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="imageUrl != null and imageUrl != ''">
                and image_url = #{imageUrl}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="name" useGeneratedKeys="true">
        insert into school_master.admin_image(image_url)
        values (#{imageUrl})
    </insert>

    <insert id="insertBatch" keyProperty="name" useGeneratedKeys="true">
        insert into school_master.admin_image(image_url)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.imageUrl})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="name" useGeneratedKeys="true">
        insert into school_master.admin_image(image_url)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.imageUrl})
        </foreach>
        on duplicate key update
        image_url = values(image_url)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update school_master.admin_image
        <set>
            <if test="imageUrl != null and imageUrl != ''">
                image_url = #{imageUrl},
            </if>
        </set>
        where name = #{name}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from school_master.admin_image where name = #{name}
    </delete>

</mapper>

